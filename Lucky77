const express = require('express');
const app = express();
const PORT = process.env.PORT || 3000;

// Middleware
app.use(express.json());

// Route test
app.get('/', (req, res) => {
  res.send('Server hoạt động thành công!');
});

// Khởi động server
app.listen(PORT, '0.0.0.0', () => {
    console.log(`Server chạy trên mạng LAN tại http://<IP-máy>:${PORT}`);
});

